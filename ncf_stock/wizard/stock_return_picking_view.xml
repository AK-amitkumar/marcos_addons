<openerp>
    <data>
        <record id="ncf_stock.view_stock_return_picking_form" model="ir.ui.view">
            <field name="name">mcf_stock view_stock_return_picking_form</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">
                <field name="location_id" position="after">
                    <field name="refund_action"/>
                    <field name="due_date"/>
                    <field name="invoice_id" attrs="{'invisible':['|',('invoice_id','=',False),('refund_action','!=','invoice_refund')]}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
