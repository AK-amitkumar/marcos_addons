<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="advanced_payemnt_internal_layout" inherit_id="report.internal_layout">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-xs-3">
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                        <div class="col-xs-6 text-center">
                            <span t-esc="company.name"/>
                        </div>
                        <div class="col-xs-3 text-right">
                            <ul class="list-inline">
                                <li>
                                    <span class="page"/>
                                </li>
                                <li>/</li>
                                <li>
                                    <span class="topage"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <report
                id="payment_request_report"
                model="account.payment"
                string="Solicitud"
                report_type="qweb-pdf"
                name="advanced_payment.payment_request_report_doc"
                file="advanced_payment.payment_request_report_doc"
                attachment_use="False"
        />

        <template id="payment_request_report_doc">
            <t t-call="report.html_container">
                <t t-set="data_report_margin_top" t-value="20"/>
                <t t-set="data_report_header_spacing" t-value="17"/>
                <t t-set="data_report_dpi" t-value="300"/>

                <t t-call="report.internal_layout">
                    <div class="page" style="font-size:10px">
                        <t t-foreach="docs" t-as="doc">
                            <t t-if="doc.state == 'draft'">
                                <h4>Solicitud de pago en borrador</h4>
                            </t>
                            <t t-if="doc.state == 'request'">
                                <h4>Solicitud de pago</h4>
                            </t>
                            <t t-if="doc.state in ('posted','sent')">
                                <h4>Solicitud pagada</h4>
                            </t>
                            <table class="table table-condensed">
                                <tr>
                                    <th class="tg-yw4l">Tipo</th>
                                    <th class="tg-yw4l">Número</th>
                                    <th class="tg-yw4l"><span t-field="doc.partner_type"/></th>
                                    <th class="tg-yw4l">Método</th>
                                    <th class="tg-yw4l">Monto</th>
                                    <th class="tg-yw4l">Fecha</th>
                                    <th class="tg-yw4l">Concepto</th>
                                </tr>
                                <tr>
                                    <td class="tg-yw4l"><span t-field="doc.payment_type"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.name"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.partner_id"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.journal_id"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.amount"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.payment_date"/></td>
                                    <td class="tg-yw4l"><span t-field="doc.communication"/></td>
                                </tr>
                            </table>
                            <t t-if="doc.move_type == 'auto'">

                                <table class="table table-condensed">
                                  <tr>
                                    <th class="tg-yw4l">Nombre</th>
                                    <th class="tg-yw4l">Debe</th>
                                    <th class="tg-yw4l">Haber</th>
                                  </tr>

                                <t t-if="doc.payment_type == 'outbound'">
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.journal_id.default_credit_account_id"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                    </tr>
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.partner_id.property_account_payable_id"></span></td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                    </tr>
                                </t>
                                <t t-if="doc.payment_type == 'inbound'">
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.journal_id.default_debit_account_id"></span></td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                    </tr>
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.partner_id.property_account_receivable_id"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                    </tr>
                                </t>
                                <t t-if="doc.payment_type == 'transfer'">
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.destination_journal_id.default_debit_account_id"></span></td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                    </tr>
                                    <tr>
                                        <td class="tg-yw4l"><span t-field="doc.journal_id.default_credit_account_id"></span></td>
                                        <td class="text-right tg-yw4l">0.00</td>
                                        <td class="text-right tg-yw4l"><span t-field="doc.amount"></span></td>
                                    </tr>
                                </t>
                                </table>
                            </t>
                            <t t-if="doc.move_type == 'manual'">
                                <table class="table table-condensed">
                                  <tr>
                                    <th class="tg-yw4l">Cuenta</th>
                                    <th class="tg-yw4l">Etiqueta</th>
                                    <th class="tg-yw4l">Analítica</th>
                                    <th class="tg-yw4l">Debe</th>
                                    <th class="tg-yw4l">Haber</th>
                                  </tr>
                                    <t t-foreach="doc.payment_move_ids" t-as="manual">
                                      <tr>
                                        <td class="tg-yw4l"><span t-field="manual.account_id"/> </td>
                                        <td class="tg-yw4l"><span t-field="manual.name"/> </td>
                                        <td class="tg-yw4l"><span t-field="manual.analytic_account_id"/> </td>
                                        <td class="text-right tg-yw4l"><span t-field="manual.debit"/> </td>
                                        <td class="text-right tg-yw4l"><span t-field="manual.credit"/> </td>
                                      </tr>
                                    </t>
                                </table>
                            </t>
                            <t t-if="doc.move_type == 'invoice'">
                                <t t-foreach="doc.payment_invoice_ids" t-as="invoice">
                                    <table class="table table-condensed" >
                                      <tr>
                                        <th class="tg-yw4l">Diario</th>
                                        <th class="tg-yw4l">Número</th>
                                        <th class="tg-yw4l">Fecha</th>
                                        <th class="tg-yw4l">Relacionado</th>
                                        <th class="tg-yw4l">Monto</th>
                                      </tr>
                                      <tr>
                                        <td class="tg-yw4l"><span t-field="invoice.move_line_id.invoice_id.journal_id"/> </td>
                                        <td class="tg-yw4l"><span t-field="invoice.move_line_id.invoice_id.number"/> </td>
                                        <td class="tg-yw4l"><span t-field="invoice.move_line_id.invoice_id.date_invoice"/> </td>
                                        <td class="tg-yw4l"><span t-field="invoice.move_line_id.invoice_id.partner_id"/> </td>
                                        <td class="text-right tg-yw4l"><span t-field="invoice.move_line_id.invoice_id.amount_total"/> </td>
                                      </tr>
                                    </table>

                                        <table class="table table-condensed table-striped table-bordered">
                                          <tr>
                                            <th class="tg-yw4l">Cuenta</th>
                                            <th class="tg-yw4l">Etiqueta</th>
                                            <th class="tg-yw4l">Analítica</th>
                                            <th class="tg-yw4l">Debe</th>
                                            <th class="tg-yw4l">Haber</th>
                                          </tr>
                                            <t t-foreach="invoice.move_line_id.move_id.line_ids" t-as="move_line">
                                              <tr>
                                                <td class="tg-yw4l"><span t-field="move_line.account_id"/> </td>
                                                <td class="tg-yw4l"><span t-field="move_line.name"/> </td>
                                                <td class="tg-yw4l"><span t-field="move_line.analytic_account_id"/> </td>
                                                <td class="text-right tg-yw4l"><span t-field="move_line.debit"/> </td>
                                                <td class="text-right tg-yw4l"><span t-field="move_line.credit"/> </td>
                                              </tr>
                                            </t>
                                        </table>

                                </t>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </template>


    </data>
</openerp>