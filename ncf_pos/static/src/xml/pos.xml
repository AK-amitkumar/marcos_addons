<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-detail:last" t-operation="replace"/>

        <t t-jquery=".detail.client-name" t-operation="replace">
            <input class='detail client-name' name='name' t-att-value='partner.name' placeholder='Cédula, RNC o Nombre'
                   style="width:100%"/>
        </t>

        <t t-jquery=".client-details-left .client-detail:last" t-operation="replace"/>

        <t t-jquery=".client-details-left" t-operation="prepend">

            <div class='client-detail'>
                <span class='label'>Comprob.</span>

                <select class="detail client-fiscal_position" name="property_account_position_id">
                    <t t-foreach='widget.pos.fiscal_positions' t-as='fiscal_position'>

                        <option t-att-value='fiscal_position.id' t-att-selected="partner.property_account_position_id ? ((fiscal_position.id === partner.property_account_position_id[0]) ? true : false) : false">
                            <t t-esc='fiscal_position.name'/>
                        </option>
                    </t>
                </select>
            </div>


            <div class='client-detail'>
                <span class='label'>RNC/Céd</span>
                <input class='detail client-ref' name='ref' t-att-value='partner.ref' placeholder='RNC/Cédula'/>
            </div>

            <div class='client-detail'>
                <span class='label'>Country</span>
                <select class='detail client-address-country' name='country_id'>
                    <option value=''>None</option>
                    <t t-foreach='widget.pos.countries' t-as='country'>
                        <option t-att-value='country.id' t-att-selected="partner.country_id ? ((country.id === partner.country_id[0]) ? true : undefined) : undefined">
                            <t t-esc='country.name'/>
                        </option>
                    </t>
                </select>
            </div>
        </t>

    </t>

    <t t-extend="ClientDetails">
        <t t-jquery="span.label:contains('Tax ID')" t-operation="replace">
            <span class='label'>RNC</span>
        </t>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery='.pos-center-align' t-operation='replace'>
            <div class="pos-center-align">
            <h1><t t-esc="widget.pos.company.name"/></h1>
            <h5><t t-esc="widget.pos.company.stree"/></h5>
        </div>
        </t>
    </t>
</templates>