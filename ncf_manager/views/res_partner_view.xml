        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="replace"/>

                <field name="name" position="replace">
                    <field name="vat_readonly" invisible="1"/>
                    <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')],
                    'readonly': [('vat_readonly','=',True)]}"/>
                </field>
                <xpath expr="//div[@class='o_row']">
                    <field name="fiscal_info_required" invisible="1"/>
                    <field name="vat" placeholder="RNC/CÃ©dula" attrs="{'required': [('fiscal_info_required','=',True)],
                    'readonly': [('vat_readonly','=',True)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <group name="acc_sale">
                    <field name="sale_fiscal_type"/>
                </group>
                <group name="acc_purchase">
                    <field name="purchase_fiscal_type"/>
                </group>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">

                <field name="name" position="replace">
                    <field name="name"
                           filter_domain="['|','|','|',('display_name','ilike',self),('ref','=',self),('email','ilike',self),('vat','ilike',self)]"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
